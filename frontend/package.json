{
  "name": "dump-restore-tool-frontend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "test:unit": "jest --color --verbose --config ./jest.config.js --testRegex='\\.unit\\.(test|spec)\\.(t|j)sx?$'",
    "test:unit:staged": "jest --verbose --config ./jest.config.js --testRegex='\\.unit\\.(test|spec)\\.tsx?$' --findRelatedTests --bail",
    "test:integration": "jest --color --verbose --config ./jest.config.js --testRegex='\\.int\\.(test|spec)\\.tsx?$' --detectLeaks",
    "test:integration:staged": "jest --verbose --config ./jest.config.js --testRegex='\\.int\\.(test|spec)\\.tsx?$' --findRelatedTests --bail",
    "test:unit:ci": "jest --color --verbose --config ./jest.ci.config.js --testRegex='\\.unit\\.(test|spec)\\.(t|j)sx?$' --detectLeaks",
    "test:integration:ci": "jest --color --verbose --config ./jest.integration.ci.config.js --testRegex='\\.int\\.(test|spec)\\.(t|j)sx?$' --detectLeaks",
    "test:coverage": "jest --coverage --config ./jest.config.js",
    "test:watch": "jest --watch --config ./jest.config.js",
    "lint": "eslint --ext .ts,.tsx src"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-hot-toast": "^2.5.2",
    "react-router-dom": "^6.20.1",
    "react-scripts": "^5.0.1"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@babel/preset-react": "^7.12.13",
    "@babel/preset-typescript": "^7.22.5",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/axios": "^0.14.4",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.10.0",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.62.0",
    "babel-plugin-istanbul": "^6.1.1",
    "eslint": "^7.19.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "husky": "^4.3.8",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.6.1",
    "jest-junit": "^16.0.0",
    "lint-staged": "^12.3.5",
    "nock": "^13.2.9",
    "prettier": "^2.2.1",
    "sass": "^1.69.5",
    "ts-jest": "^29.1.0",
    "typescript": "^4.9.5"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.(ts|tsx)": [
      "npm run lint",
      "npm run test:unit:staged"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "nyc": {
    "exclude": [
      "cypress/**/*.*"
    ]
  }
}
